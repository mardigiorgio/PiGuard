[Unit]
Description=PiGuard Scapy Sniffer
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/piguard
Environment=PYTHONUNBUFFERED=1
Environment=PYTHONPATH=/opt/piguard/src
ExecStart=/opt/piguard/.venv/bin/python -m wids sniffer --config /etc/piguard/wids.yaml
Restart=always
RestartSec=1
# Running as root simplifies raw socket access
NoNewPrivileges=false

[Install]
WantedBy=multi-user.target
